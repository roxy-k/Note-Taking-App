<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Login</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="/css/style.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body class="d-flex flex-column min-vh-100" style="font-family: Arial; font-size: 16px; background-color: #fffaf6; color: #000;">

  <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #f9d5d3;">
    <div class="container-fluid">
      <a class="navbar-brand" href="/dashboard">Note Taking App</a>
      <button id="toggleTheme" class="btn btn-sm btn-secondary">ðŸŒ™ Toggle Theme</button>

    </div>
  </nav>

  <main class="container py-5">
    <h1 class="text-center mb-4">Login with OAuth</h1>
    <div class="mx-auto" style="max-width: 400px; background-color: #ffffff; padding: 30px; border-radius: 10px; box-shadow: 0 0 10px rgba(0,0,0,0.05);">
      <p class="text-center">Sign in with Google or Facebook to start taking notes in one click.</p>
      <div class="d-grid gap-3">
        <a href="/auth/google" class="btn btn-outline-danger">
          <img src="/google-logo.png" alt="Google Logo" style="height: 20px; margin-right: 8px;">Login with Google
        </a>
        <a href="/auth/facebook" class="btn btn-outline-info">
          <img src="/facebook-logo.png" alt="Facebook Logo" style="height: 20px; margin-right: 8px;">Login with Facebook
        </a>
      </div>

      <% if (user) { %>
        <div class="mt-4 alert alert-info text-center">
          You're already logged in as: <strong><%= user.displayName || user.email || user.name || 'User' %></strong><br>
          <a href="/dashboard" class="btn btn-sm btn-secondary mt-2">Go to Dashboard</a>
        </div>
      <% } %>
    </div>
  </main>

  <footer class="mt-auto text-center py-3 small" style="background-color: #f4e1d2; color: #6a5555;">
    &copy; 2025 Oksana Katysheva
  </footer>
  <script>
  const toggleButton = document.getElementById('toggleTheme');
  const savedTheme = localStorage.getItem('theme');

  if (savedTheme === 'dark') {
    document.body.classList.add('dark-mode');
  }

  if (toggleButton) {
    toggleButton.addEventListener('click', () => {
      document.body.classList.toggle('dark-mode');
      localStorage.setItem(
        'theme',
        document.body.classList.contains('dark-mode') ? 'dark' : 'light'
      );
    });
  }
</script>

</body>
</html>
